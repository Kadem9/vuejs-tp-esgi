{
  "name": "vuejs-crm",
  "version": "1.0.0",
  "description": "CRM Vue.js avec backend SQLite",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd crm-vue && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../crm-vue && npm install",
    "db:setup": "cd backend && npm run db:generate && npm run db:push && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["vue", "crm", "sqlite", "express"],
  "author": "",
  "license": "ISC"
} 